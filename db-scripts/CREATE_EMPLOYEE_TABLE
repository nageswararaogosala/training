ALTER TABLE EMPLOYEE
 DROP PRIMARY KEY CASCADE;

DROP TABLE EMPLOYEE CASCADE CONSTRAINTS;
DROP SEQUENCE EMPLOYEE_ID_SEQ;

CREATE TABLE EMPLOYEE
(
  EMPLOYEE_ID      NUMBER(20)      NOT NULL,
  EMPLOYEE_NAME    VARCHAR2(50 BYTE) NOT NULL,
  MAIL             VARCHAR2(50 BYTE),  
  DESIGNATION      VARCHAR2(50 BYTE),
  ROLE             VARCHAR2(50 BYTE),
  LOCATION         VARCHAR2(50 BYTE),
  TXN_DATE         DATE,
  CONSTRAINT "PK_EMP_ID" PRIMARY KEY ("EMPLOYEE_ID")  
);


CREATE SEQUENCE EMPLOYEE_ID_SEQ
  MINVALUE 1
  MAXVALUE 999999999999999999999999999
  START WITH 1
  INCREMENT BY 2
  CACHE 250;

INSERT INTO EMPLOYEE (EMPLOYEE_ID,EMPLOYEE_NAME,MAIL, ROLE, DESIGNATION, LOCATION, TXN_DATE)
VALUES (EMPLOYEE_ID_SEQ.NEXTVAL, 'SiriChandana', 'xyz@gmail.com', 'Software Engineer', 'Trainee', 'Chennai', SYSDATE);
COMMIT;

INSERT INTO EMPLOYEE (EMPLOYEE_ID,EMPLOYEE_NAME,MAIL, ROLE, DESIGNATION, LOCATION, TXN_DATE)
